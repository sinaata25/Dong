<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:background="@drawable/style7"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="رضا باقرنتاج"
        android:layout_weight=".9"
        android:textColor="@color/white"
        android:id="@+id/item_result_name_end"
        android:paddingBottom="10dp"
        android:gravity="bottom"
        android:paddingRight="10dp"
        android:fontFamily="@font/lalezarfont"
        android:textSize="20dp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="200000تومان"
        android:paddingTop="20dp"
        android:layout_weight=".9"
        android:maxWidth="200dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:drawableBottom="@drawable/ic_arrow"
        android:id="@+id/item_result_hazine"
        android:gravity="center"
        android:fontFamily="@font/lalezarfont"
        android:textSize="22dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="علی صفرپور"
        android:layout_weight=".9"
        android:textColor="@color/white"
        android:id="@+id/item_result_name_first"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:fontFamily="@font/lalezarfont"
        android:textSize="20dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent"/>

</LinearLayout>