<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_height="80dp">
    <ImageView
        android:layout_width="30dp"
        android:background="#0CFFFFFF"
        android:id="@+id/list_img_delete"
        android:layout_gravity="center"
        android:layout_weight=".1"
        android:src="@drawable/ic_del2"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="20000000"
        android:background="#28FFFFFF"
        android:maxWidth="80dp"
        android:layout_weight=".2"
        android:textColor="@color/white"
        android:id="@+id/list_txt_price"
        android:gravity="center"
        android:fontFamily="@font/lalezarfont"
        android:textSize="18dp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="1400/3/2"
        android:textColor="@color/white"
        android:layout_weight=".2"
        android:maxWidth="80dp"
        android:id="@+id/list_txt_date"
        android:gravity="center"
        android:background="#0CFFFFFF"
        android:fontFamily="@font/lalezarfont"
        android:textSize="18dp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="سوپرمارکت"
        android:textColor="@color/white"
        android:maxWidth="80dp"
        android:layout_weight=".2"
        android:background="#28FFFFFF"
        android:id="@+id/list_txt_detail"
        android:gravity="center"
        android:fontFamily="@font/lalezarfont"
        android:textSize="18dp"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="سینا"
        android:layout_weight=".2"
        android:maxWidth="80dp"
        android:background="#0CFFFFFF"
        android:textColor="@color/white"
        android:id="@+id/list_txt_name"
        android:gravity="center"
        android:fontFamily="@font/lalezarfont"
        android:textSize="18dp"
        android:layout_height="match_parent"/>


</LinearLayout>